  <style type="text/css">
    .nadpis {
      margin: 0;
      left: 0;
      top: 0;
      width: 100%;
      text-align: center;
      background: #202225;

    }

    .nadpis_text_format {
      font-size: 48px;
      font-family: "Verdana";
      color: white;
    }

    .slider {
      float: none;
      width: 350px;
      height: 430px;
      overflow-y: scroll;
      border-top: 0px;
    }

    .slide {
      float: none;
      margin: 2% 1% 1% 1%;
      width: 98%;
      height: fit-content;
      border-radius: 5px;
      background-color: #2f3136;
    }

    ::-webkit-scrollbar {
      width: 5px;
    }

    ::-webkit-scrollbar-thumb {
      background: #37393b;
      border-radius: 10px;
    }

    .placeholder_main {
      position: absolute;
      margin: 0.5% 1% 1% 1%;
      width: 98%;
      height: fit-content;
      border-radius: 6px;
    }

    .placeholder_name {
      left: 0;
      top: 0;
      width: 100%;
      height: 70px;
      text-align: center;
      background: #7289DA;
      border-top-left-radius: 6px;
      border-top-right-radius: 6px;
    }

    .placeholder_name_text {
      height: 100%;
      display: flex;
      margin: 0 5% 0 5%;
      justify-content: left;
      align-items: center;
      color: white;
      font-size: 24px;
      font-family: "Verdana";
    }


    .placeholder_father {
      margin: 10px;
      float: left;
      width: fit-content;
      height: 500px;
      background: #202225;
      border: 2px solid #202225;
      border-radius: 6px;
    }

    .placeholder_child {
      border: 1px solid black;
    }

    .odkazy_format {
      margin: 5px;
      border-radius: inherit;
      font-size: 22px;
      font-family: "Verdana";
      color: #99AAB5;
    }

    .remove_decor {
      text-decoration: none;
    }

    .counter_placeholder {
      border-radius: 5px;
      background-color: #202225;
      margin: 1%;
      width: fit-content background:;
      position: fixed;
      right: 0;
      bottom: 0;
    }

    .counter {
      margin: 5px;
      font-size: 24px;
      color: #99AAB5;
      font-family: Verdana;
    }
  </style>
</head>

